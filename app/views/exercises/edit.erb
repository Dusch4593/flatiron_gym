<h1>Edit Exercise</h1>

<form action="/exercises/<%= @exercise.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name" value="<%= @exercise.name %>" required><br>
  Exercise Type: <input type="text" name="exercise_type" value="<%= @exercise.exercise_type %>"><br>
  Description: <input name="description" value="<%= @exercise.description %>"> <br>
  Sets: <input type="number" name="sets" value="<%= @exercise.sets %>"min=0><br>
  Reps: <input type="number" name="reps" value="<%= @exercise.reps %>"min=0><br>
  <input type="submit" value="Edit Exercise">
</form>
